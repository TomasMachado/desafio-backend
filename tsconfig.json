{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "rootDir": "source",
    "baseUrl": "source",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./source"],
  "exclude": ["node_modules", "dist"]
}